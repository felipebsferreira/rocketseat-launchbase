{% extends "layout.njk" %}

{% block head %}
{% endblock head %}

{% block content %}
    <div class="card table-container">
        <a href="/members/create">Novo</a>

        <table width="100%">
            <thead>
                <tr>
                    <th>Membro</th>
                    <th>E-mail</th>
                    <th>Peso (kg)</th>
                    <th>Altura (cm)</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for member in members %}
                    <tr>
                        <td>
                            <div>
                                <span style="background-image: url({{ member.avatar_url }})"></span>
                                {{ member.name }}
                            </div>
                        </td>
                        <td>
                            {{ member.email }}
                        </td>
                        <td>
                            {{ member.weight }}
                        </td>
                        <td>
                            {{ member.height }}
                        </td>
                        <td>
                            <a href="/members/{{ member.id }}">ver</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}