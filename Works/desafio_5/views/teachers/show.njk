{% extends "layout.njk" %}

{% block head %}
    <title>Aulas particulares</title>
{% endblock %}

{% block content %}
    <div class="card">
        <div 
            class="card-image"
            style="background: url({{ teacher.photo_url }}) no-repeat center center / cover">
        </div>
        <div class="card-details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Nome completo</div>
                <div>{{ teacher.name }}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{ teacher.age }}</div>
            </div>

            <div class="item">
                <div>Grau de escolaridade</div>
                <div>{{ teacher.educational_level }}</div>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <div>{{ teacher.class_type }}</div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    {% for area in teacher.areas %}
                        <span> {{ area }}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{ teacher.created_at }}</div>
            </div>

            <a class="button" href="/teachers/{{ teacher.id }}/edit">Editar</a>
        </div>
    </div>
{% endblock %}