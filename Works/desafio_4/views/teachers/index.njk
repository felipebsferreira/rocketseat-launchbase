{% extends "layout.njk" %}

{% block head %}
    <title>Aulas particulares</title>
{% endblock %}

{% block content %}
    <div class="card table-container">
        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>

            <tbody>
                {% for teacher in teachers %}
                    <tr>
                        <td>
                            <div>
                                <img src="{{teacher.photo_url}}" alt="photo">
                                {{ teacher.name }}
                            </div>
                        </td>
                        <td>
                            {% for area in teacher.areas %}
                                <span>{{ area }}</span>
                            {% endfor %}
                        </td>
                        <td>
                            <a href="/teachers/{{ teacher.id }}">Ver</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}