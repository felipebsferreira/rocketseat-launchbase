{% extends "layout.njk" %}

{% block head %}
    <title>Aulas particulares</title>
{% endblock %}

{% block content %}
    <div class="card table-container">
        <a id="index-create-btn" href="/students/create">Criar estudante</a>
        
        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>E-mail</th>
                    <th>Ano escolar</th>
                    <th>Ação</th>
                </tr>
            </thead>

            <tbody>
                {% for student in students %}
                    <tr>
                        <td>
                            <div>
                                <img src="{{student.photo_url}}" alt="photo">
                                {{ student.name }}
                            </div>
                        </td>
                        <td>
                            {{ student.email }}
                        </td>
                        <td>
                            {{ student.school_year }}
                        </td>
                        <td>
                            <a href="/students/{{ student.id }}">Ver</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}