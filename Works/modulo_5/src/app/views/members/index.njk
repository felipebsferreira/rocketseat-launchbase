{% extends "layout.njk" %}

{% block head %}
{% endblock head %}

{% block content %}
    <div class="card table-container">
        <div class="header">
            <a class="button" href="/members/create">Novo</a>
            <form action="/members" method="GET">
                <input type="text" name="filter" placeholder="Nome ou e-mail" value={{ filter }}>
                <button type="submit">Filtrar</button>
            </form>
        </div>

        <table width="100%">
            <thead>
                <tr>
                    <th>Membro</th>
                    <th>E-mail</th>
                    <th>Peso (kg)</th>
                    <th>Altura (cm)</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for member in members %}
                    <tr>
                        <td>
                            <div>
                                <span style="background-image: url({{ member.avatar_url }})"></span>
                                {{ member.name }}
                            </div>
                        </td>
                        <td>
                            {{ member.email }}
                        </td>
                        <td>
                            {{ member.weight }}
                        </td>
                        <td>
                            {{ member.height }}
                        </td>
                        <td>
                            <a href="/members/{{ member.id }}">ver</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="pagination"
            data-page={{pagination.page}}
            data-total={{pagination.total}}
            data-filter={{filter}}>
        </div>
    </div>
{% endblock %}