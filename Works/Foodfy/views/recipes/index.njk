{% extends "../layout.njk" %}

{% block content %}
    <div class="admin-header">
        <h1 id="admin-title">Gerenciar receitas</h1>
        <div>
            <a class="button" href="/admin/recipes/create">Criar receita</a>
        </div>
    </div>

    <div class="admin-cards">
        {% for recipe in recipes %}
            <div class="admin-card">
                <div>
                    <img src="{{ recipe.image }}" alt="Imagem de {{ recipe.title }}">
                </div>
                <div>
                    <h2>{{ recipe.title }}</h2>
                    <p>{{ recipe.author }}</p>
                    <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock content %}