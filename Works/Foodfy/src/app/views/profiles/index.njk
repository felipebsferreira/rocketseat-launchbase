{% extends "../layout.njk" %}

{% block content %}
    <div class="admin-header">
        <h1 id="admin-title">Bem vindo {{ name }}</h1>
        <div>
            <button class="button" type="submit" form="save-profile" >Salvar</button>
        </div>
    </div>

    <form class="profile-fields" action="/admin/users/profile?_method=PUT" method="POST" id="save-profile">
        <section>
            <p>Nome</p>
            <input type="text" name="name" value="{{ name }}" placeholder="Digite o novo nome"
                {% if isNameInvalid %}
                    class="invalid"
                {% endif %}
            >
        </section>

        <section>
            <p>E-mail</p>
            <input type="email" name="email" value="{{ email }}" placeholder="Digite o novo e-mail"
                {% if isEmailInvalid %}
                    class="invalid"
                {% endif %}
            >
        </section>

        <section>
            <p>Senha</p>
            <input type="password" name="password" placeholder="Digite a senha"
                {% if isPasswordInvalid %}
                    class="invalid"
                {% endif %}
            >
        </section>
    </form>
{% endblock content %}