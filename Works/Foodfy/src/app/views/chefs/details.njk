{% extends "../layout.njk" %}

{% block content %}
    <div class="admin-header">
        <h1 id="admin-title">Chef: {{ chef.name }}</h1>
        <div>
            <a class="button" href="/admin/chefs/{{ chef.id }}/edit">Editar chef</a>
        </div>
    </div>

    <div class="details-card details-chef">
        <img src="{{ chef.avatarUrl }}" alt="Imagem de {{ chef.name }}">
        <h1>{{ chef.name }}</h1>
        <p>{{ chef.totalRecipes }} receita(s)</p>
    </div>

    <h1 id="admin-title">Receitas</h1>

    <div class="admin-cards">
        {% if chef.totalRecipes > 0 %}
            {% for recipe in recipes %}
                <div class="admin-card">
                    <div>
                        <img src="{{ recipe.image }}" alt="Imagem de {{ recipe.title }}">
                    </div>
                    <div>
                        <h2>{{ recipe.title }}</h2>
                        <p>{{ chef.name }}</p>
                        <a href="/admin/recipes/{{ recipe.recipe_id }}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endblock content %}
