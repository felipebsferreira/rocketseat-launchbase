{% extends "../layout.njk" %}

{% block content %}
    <div class="admin-header">
        <h1 id="admin-title">Gerenciar chefs</h1>
        <div>
            <a class="button" href="/admin/chefs/create">Criar chef</a>
        </div>
    </div>

    <div class="admin-chef-cards">
        {% for chef in chefs %}
            <div class="admin-chef-card">
                <div>
                    <img src="{{ chef.avatar_path }}" alt="Imagem de {{ chef.name }}">
                </div>
                <div>
                    <h1>{{ chef.name }}</h1>
                    <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock content %}