{% extends "../layout.njk" %}

{% block content %}
    <form class="login" action="/login/reset?_method=PUT" method="POST">
        <h1>Nova Senha</h1>

        <section>
            <p>E-mail</p>
            <input type="email" name="email" value="{{ email }}" placeholder="Digite seu e-mail"
                {% if isEmailInvalid %}
                    class="invalid"
                {% endif %}
            >
        </section>

        <section>
            <p>Nova senha</p>
            <input type="password" name="password" placeholder="Digite sua nova senha"
                {% if isPasswordInvalid %}
                    class="invalid"
                {% endif %}
            >
        </section>

        <section>
            <p>Repetir senha</p>
            <input type="password" name="passwordRepeat" placeholder="Repita a nova senha"
                {% if isPasswordRepeatInvalid %}
                    class="invalid"
                {% endif %}
            >
        </section>

        <div class="password-recover">
            <button class="button" type="submit">Nova Senha</button>
        </div>
    </form>
{% endblock content %}