{% extends "../layout.njk" %}

{% block content %}
    <form class="login" action="/login/forgot" method="POST">
        <h1>Esqueceu a Senha?</h1>

        <section>
            <p>E-mail</p>
            <input type="email" name="email" value="{{ email }}" placeholder="Digite seu e-mail"
                {% if isEmailInvalid %}
                    class="invalid"
                {% endif %}
            >
        </section>

        <div class="password-recover">
            <button class="button" type="submit">Recuperar</button>
        </div>
    </form>
{% endblock content %}