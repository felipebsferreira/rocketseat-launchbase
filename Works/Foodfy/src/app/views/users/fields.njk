<div class="user-fields">
    <div>
        <section>
            <p>Nome</p>
            <input type="text" name="name" value="{{ user.name }}" placeholder="Digite o novo nome"
                {% if isNameInvalid %}
                    class="invalid"
                {% endif %}
            >
        </section>

        <section>
            <p>E-mail</p>
            <input type="email" name="email" value="{{ user.email }}" placeholder="Digite o novo e-mail"
                {% if isEmailInvalid %}
                    class="invalid"
                {% endif %}
            >
        </section>
    </div>

    <section>
        <input type="checkbox" name="isAdmin" id="isAdmin"
            {% if user.isAdmin %}
                checked
            {% endif %}
        >
        <label for="isAdmin">Administrador</label>
    </section>
</div>